@using CustomerManangementService.Entities.Concrete;
@model Customer
@{
    Layout = "_Layout";
}
<div>
    <div class="container">
        <main>
            <p>Müşteri Bilgileri Güncelle</p>
        </main>
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form class="needs-validation" asp-controller="Customer" asp-action="UpdateCustomer" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        @Html.HiddenFor(x => x.customerId)
                        <div class="col-12">
                            <label for="nameSurname" class="form-label">Ad Soyad</label>
                            <input type="text" class="form-control" id="nameSurname" placeholder="@Model.nameSurname" value="@Model.nameSurname" asp-for="nameSurname" required />
                            <div class="invalid-feedback">
                                Geçerli bir kullanıcı adı giriniz.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="phone" class="form-label">Telefon Numarası</label>
                            <input type="tel" class="form-control" id="phone" placeholder="@Model.phone" value="@Model.phone" asp-for="phone" required>
                            <div class="invalid-feedback">
                                Adres giriniz.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="adress" class="form-label">Adres</label>
                            <input type="text" class="form-control" id="adress" placeholder="@Model.adress" value="@Model.adress" asp-for="adress" required>
                            <div class="invalid-feedback">
                                Adres giriniz.
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary btn-lg right-button" type="submit">Güncelle</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>